@{
    ViewBag.Title = "Policy Form";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@if (TempData["Errors"] != null)
{
    foreach (var error in (List<string>)TempData["Errors"])
    {
        <div class="alert alert-danger">@error</div>
    }
}



<form method="post" action="CreatePolicy">
    <div class="form-group">
        <label for="ExternalCode">External Code:</label>
        <input class="form-control" type="text" name="ExternalCode" id="ExternalCode" value="@TempData["ExternalCode"]" />
    </div>
    <div class="form-group">
        <label for="PolicyNumber">Policy Number:</label>
        <input class="form-control" type="text" name="PolicyNumber" id="PolicyNumber" value="@TempData["PolicyNumber"]" />
    </div>
    <div class="form-group">
        <label for="Value">Policy Value:</label>
        <input class="form-control" type="text" name="Value" id="Value" value="@TempData["Value"]" />
    </div>
    <input class="btn btn-primary" type="submit" value="Create Policy" />
</form>
