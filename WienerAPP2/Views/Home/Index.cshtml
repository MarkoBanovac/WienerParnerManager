@{
    ViewBag.Title = "Home";
}

<div style="padding-top: 2vh">
    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Partner Number</th>
                <th>CroatianPIN</th>
                <th>Partner Type</th>
                <th>Created At</th>
                <th>Is Foreign</th>
                <th>Gender</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Partner in Model)
            {
                if (TempData["NewEntry"] == Partner.ExternalCode)
                {
                    <tr style="cursor: pointer; background: #D3D3D3;" onclick="OpenModalPartner(@Partner.ExternalCode)">
                        <td>@(Partner.FirstName + " " + Partner.LastName)</td>
                        <td>@Partner.PartnerNumber</td>
                        <td>@Partner.CroatianPIN</td>
                        @if (Partner.PartnerTypeId == "1")
                        {
                            <td>Personal</td>
                        }
                        else if (Partner.PartnerTypeId == "2")
                        {
                            <td>Legal</td>
                        }
                        <td>@Partner.CreatedAtUtc</td>
                        <td>@Partner.IsForeign</td>
                        <td>@Partner.Gender</td>
                    </tr>
                }
                else
                {
                    <tr style="cursor:pointer" onclick="OpenModalPartner(@Partner.ExternalCode)">
                        <td>@(Partner.FirstName + " " + Partner.LastName)</td>
                        <td>@Partner.PartnerNumber</td>
                        <td>@Partner.CroatianPIN</td>
                        @if (Partner.PartnerTypeId == "1")
                        {
                            <td>Personal</td>
                        }
                        else if (Partner.PartnerTypeId == "2")
                        {
                            <td>Legal</td>
                        }
                        <td>@Partner.CreatedAtUtc</td>
                        <td>@Partner.IsForeign</td>
                        <td>@Partner.Gender</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="modal" tabindex="-1" id="partnerModal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Partner Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
